{
  "options": [
    {
      "type": "addPdf",
      "contentPath": "path/to/html",
      "outputPath": "path/to/output.pdf",
      "options": {
        "name": "output.pdf",
        "include": true,
        "files": ["sample.md", "sample.adoc"],
        "path": "pdfs",
        "merge": true
      }
    },
    {
      "type": "collectManual",
      "service": "serviceName",
      "workDir": "/workspace"
    },
    {
      "type": "getFiles",
      "root": "path/to/source"
    },
    {
      "type": "packFolder",
      "source": "path/to/source",
      "destination": "path/to/destination",
      "workDir": "/workspace"
    },
    {
      "type": "youtrack",
      "source": "path/to/source",
      "YOUTRACK_TOKEN": "perm:U3phbmk=.NjQtMzE=.CxvLxXYa9T0gAzqruTLbiHLstpC5z2",
      "VUER_BUILD_NUMBER": "4",
      "VUER_TAG_NAME": "raiffeisen",
      "VUER_TAG": "raiffeisen-1.9.11.4"
    },
    {
      "type": "archive",
      "workDir": "/workspace",
      "options": {
        "outputFileName": "path/to/archive.zip",
        "packSourceCode": false,
        "packBuildCode": false,
        "packDevEnvironment": false,
        "packDocumentation": false,
        "packDockerImages": false,
        "packCredits": false,
        "packAudit": false,
        "packManual": true,
        "youTrackToken": "your-youtrack-token",
        "whitelist": ["vuer_oss", "vuer_css", "portal_css", "vuer_cv", "vuer_android", "vuer_ios_sdk"]
      }
    }
  ]
}
