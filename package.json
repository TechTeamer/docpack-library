{
	"name": "@techteamer/docpack-library",
	"version": "1.0.0",
	"description": "A FaceKom Document Generator Library",
	"main": "./build/docpack-library.js",
	"type": "module",
	"module": "./build/docpack-library.js",
	"types": "./build/docpack-library.d.ts",
	"exports": {
		".": {
			"types": "./build/docpack-library.d.ts",
			"import": "./build/docpack-library.js",
			"require": "./build/docpack-library.cjs"
		}
	},
	"scripts": {
		"build": "tsup",
		"test": "vitest run",
		"lint": "biome lint",
		"format": "biome format --write",
		"check": "biome check  --write",
		"commit": "cz"
	},
	"engines": {
		"node": ">=20"
	},
	"config": {
		"commitizen": {
			"path": "node_modules/cz-git"
		}
	},
	"files": [
		"build"
	],
	"keywords": ["pdf", "docpack", "docpack-library", "generator"],
	"repository": {
		"type": "git",
		"url": "git+https://github.com/TechTeamer/docpack-library.git"
	  },
	  "bugs": {
		"url": "https://github.com/TechTeamer/dockpack-library/issues"
	  },
	  "homepage": "https://github.com/TechTeamer/dockpack-library",
	"author": "TechTeamer",
	"license": "MIT",
	"devDependencies": {
		"@biomejs/biome": "^1.9.2",
		"@types/node": "^22.6.1",
		"@types/pdf-parse": "^1.1.4",
		"tsup": "^8.3.0",
		"typescript": "^5.6.2",
		"@semantic-release/changelog": "^6.0.3",
		"@semantic-release/commit-analyzer": "^13.0.0",
		"@semantic-release/git": "^10.0.1",
		"@semantic-release/github": "^10.1.6",
		"@semantic-release/npm": "^12.0.1",
		"@semantic-release/release-notes-generator": "^14.0.1",
		"semantic-release": "^24.0.0"
	},
	"dependencies": {
		"cheerio": "^1.0.0",
		"marked": "^14.1.2",
		"pdfjs-dist": "^4.6.82",
		"puppeteer": "^23.4.0"
	}
}
